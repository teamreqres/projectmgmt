<%- include('../partials/header', {title: "Surveys"}); %>

<h1><button data-toggle="sidebarToggle" class="btn btn-link btn-icon text-dark d-inline-block d-md-none"><i class="fa fa-bars" aria-hidden="true"></i><span class="sr-only">Menu</span></button> <%= locals.survey ? survey['name'] : 'New Survey'; %></h1>

<form id="surveyEditor" class="row" action="/surveys/<%= locals.survey ? survey['id'] : 'new' %>" method="post"
<%- locals.survey ? 'data-id="' + survey['id']+ '"' : '' %>>
  <div class="col">

    <div class="form-group">
      <label for="surveyName">Survey Name</label>
      <input type="text" class="form-control" name="surveyName" id="surveyName" placeholder="Survey Name" value="<%= locals.survey ? survey['name'] : '' %>">
    </div>

    <div class="form-group">
      <label for="surveyIntroduction">Survey Introduction</label>
      <textarea class="form-control" id="surveyIntroduction" name="surveyIntroduction" rows="3"><%= locals.survey ? survey['introductionMessage'] : '' %></textarea>
    </div>

    <div class="form-group">
      <label for="surveyCompletion">Survey Completion</label>
      <textarea class="form-control" id="surveyCompletion" name="surveyCompletion" rows="3"><%= locals.survey ? survey['completionMessage'] : '' %></textarea>
    </div>

    <% if (locals.survey) { %>
      <%- include('../partials/relatedChooser', {type: "Sections"}); %>
    <% } %>

  </div>

  <div class="col-lg-4">
    <div class="card card-gradient-purple mb-3">
      <div class="card-header">
        Actions
      </div>
      <div class="card-body">
        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i> <%= locals.survey ? 'Update' : 'Create' %></button>
        <% if (locals.survey) { %>
          <a href="/surveys/<%= survey['id']; %>/delete" class="btn text-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
        <% } %>
      </div>
    </div>

  </div>
</form>

<%- include('../partials/footer'); %>