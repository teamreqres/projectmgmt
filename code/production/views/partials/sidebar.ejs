<div id="sidebar" class="col-md-5 col-lg-3 d-sm-block sidebar <% if (locals.showSidebarMobile) { %>open<% } %>" data-type="<%= title.toLowerCase(); %>">
	<div class="sidebar-container card-gradient-coral">
		<div class="d-flex justify-content-between">
			<h2>
				<% if (!locals.showSidebarMobile) { %><button data-toggle="sidebarToggle" class="btn btn-link btn-icon text-white d-inline-block d-md-none"><i class="fa fa-times" aria-hidden="true"></i><span class="sr-only">Close</span></button><% } %>
				<%= title; %></h2>
			<a href="/<%= title.toLowerCase(); %>/new" class="btn btn-light btn-icon">
				<i class="fa fa-plus" aria-hidden="true"></i> <span class="sr-only">Add</span>
			</a>
		</div>
		
		<form class="sidebar-search form-inline justify-content-between mt-3 mb-3">
			<div class="form-group">
				<input name="searchName" type="text" placeholder="Search by Name" class="form-control">
				<!-- <button name="search" type="button" class="btn btn-info"><i class="fa fa-search" aria-hidden="true"></i></button> -->
			</div>
			<div class="form-group ml-3">
				<button name="sort" type="button" class="btn btn-light">Sort <i class="fa fa-sort" aria-hidden="true"></i></button>
			</div>
		</form>

		<div class="sidebar-items list-group"></div>

		<div class="sidebar-loading text-center mb-3">
			<i class="fa fa-cog fa-spin fa-4x fa-fw"></i>
			<span class="sr-only">Loading...</span>
		</div>
	</div>
</div>