<%- include('../partials/header', { title }); %>

<% if(title.charAt( title.length-1 ) == "s") {
  var singular = title.slice(0, -1);
} else {
  var singular = title;
} %>

<h1><button data-toggle="sidebarToggle" class="btn btn-link btn-icon text-dark d-inline-block d-md-none"><i class="fa fa-bars" aria-hidden="true"></i><span class="sr-only">Menu</span></button> Delete <%= singular; %></h1>

<form method="post" action="/<%= title; %>/<%= data['id']; %>/delete">

  <input type="hidden" name="<%= singular.toLowerCase(); %>Id" value="<%= data['id']; %>"> 

  <div class="card border-danger mb-3 col-7 pl-0 pr-0">
    <div class="card-header bg-danger text-white">Confirm Deletion</div>
    <div class="card-body">
      <p class="card-text">Do you want to delete the <%= singular.toLowerCase(); %>: <strong>"<%= data['name']; %>"</strong>?</p>
      <button type="submit" class="btn text-danger btn-light btn-lg">Delete <%= singular; %></button>
      <a href="/<%= title; %>/<%= data['id']; %>" class="btn btn-primary">Cancel</a>
    </div>
  </div>

</form>

<%- include('../partials/footer'); %>